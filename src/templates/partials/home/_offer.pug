mixin offer__item(color, img, title)
    div(class="w-full md:w-1/3 px-3")
        a(href="#" class=`
        relative
        item
        rounded-large
        flex justify-start items-center
        w-full
        bg-${color}
        text-white   text-3xl
        mx-auto
        my-3
        md:my-0
        `)
            div(class="w-1/2 text-left text-3xl font-bold leading-tight px-10")
                h2= title
            img(src=img, alt="").absolute.bg-no-repeat

//- BEGIN offer
section(class="md:pb-32 mt:pt-20 xl:py-20").offer.py-20.relative
    div(class="md:block", style="background-image: url(../img/bg/decor-offer.svg)").hidden.offer__decor.absolute.bg-contain.bg-no-repeat.z-0
    .container
        div(class="").flex.flex-wrap.justify-between
            +offer__item('violet',  '../img/offer/offer-01.png', 'Best Sellers')
            +offer__item('yellow', '../img/offer/offer-02.png', 'Sale Now')
            +offer__item('blue', '../img/offer/offer-03.png', 'Reward Program')


//- END offer