                +filter_btn('Markers')
                +filter_btn('Arteza')
                +filter_btn('Products')
                +filter_btn('Price')
                +filter_btn('Variety')
                +filter_btn('Color')
                select.select-filter.py-2.pl-4.pr-24.font-sans.text-tiny.text-black.font-bold.border.border-solid.border-lightGraySecond.bg-white.mb-2(class='hover:border-gray-500 focus:outline-none focus:shadow-outline')
                    option(disabled selected) Sort
