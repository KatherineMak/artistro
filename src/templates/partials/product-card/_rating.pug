                                +icon('star','fill-current text-orange')
                            div(class="w-2/12").bg-yellowIcon.py-3.text-white.text-center.flex.items-center.justify-center
                                p.font-sans.text-xl 4%
                            div(class="w-6/12").bg-gray.py-3
                            div(class="w-2/12").bg-white.py-3.flex.items-center.justify-center
                                p.font-sans.text-black.text-xl.text-center 10
                        .flex.mb-3
